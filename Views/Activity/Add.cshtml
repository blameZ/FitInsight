@using FitInsight.Models.ViewModels

@model AddActivityViewModel

@{
    ViewData["Title"] = "Profil użytkownika";
}

<div class="container">
    <div class="add-activity">
        <h2 class="add-activity__title">Dodaj nową aktywność</h2>

        <form asp-action="Add" method="post" class="add-activity__form">
            <div class="form-group">
                <label asp-for="ActivityType" class="form-label"></label>
                <input asp-for="ActivityType" class="form-input" />
                <span asp-validation-for="ActivityType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Distance" class="form-label"></label>
                <input asp-for="Distance" class="form-input" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Duration" class="form-label"></label>
                <input asp-for="Duration" class="form-input" type="time" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CaloriesBurned" class="form-label"></label>
                <input asp-for="CaloriesBurned" class="form-input" />
                <span asp-validation-for="CaloriesBurned" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartTime" class="form-label"></label>
                <input asp-for="StartTime" class="form-input" type="datetime-local" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary add-activity__submit-btn">Dodaj aktywność</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}